{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
        <div class="row justify-content-center">
                <div class="col-md-6">
                        <h1 class="mb-4 text-center">Créer un compte</h1>
                        {{ form_start(registrationForm) }}
                                {{ form_row(registrationForm.pseudo) }}
                                {{ form_row(registrationForm.email) }}
                                {{ form_row(registrationForm.plainPassword.first) }}
                                {{ form_row(registrationForm.plainPassword.second) }}
                                <div class="d-grid">
                                        <button class="btn btn-primary" type="submit">Je m'inscris</button>
                                </div>
                        {{ form_end(registrationForm) }}
                        <p class="mt-3 text-center">Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous</a>.</p>
                </div>
        </div>
{% endblock %}
