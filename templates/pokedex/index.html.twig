{% extends 'base.html.twig' %}

{% block title %}Pokédex{% endblock %}

{% block body %}
        <div class="py-4">
                <h1 class="mb-4">Pokédex</h1>

                <form method="get" action="{{ path('pokedex.index') }}" class="row gy-2 gx-3 align-items-center mb-4">
                        <div class="col-sm-8 col-md-6">
                                <input type="search" name="search" value="{{ searchTerm }}" class="form-control" placeholder="Rechercher un Pokémon par nom ou numéro">
                        </div>
                        <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Rechercher</button>
                        </div>
                </form>

                {% if searchResult %}
                        <div class="card mb-4 shadow-sm">
                                <div class="row g-0 align-items-center">
                                        <div class="col-md-3 text-center p-3">
                                                <img src="{{ searchResult.image }}" alt="{{ searchResult.name }}" class="img-fluid" loading="lazy">
                                        </div>
                                        <div class="col-md-9">
                                                <div class="card-body">
                                                        <h2 class="card-title text-capitalize">#{{ searchResult.id }} - {{ searchResult.name }}</h2>
                                                        {% if searchResult.types is defined and searchResult.types %}
                                                                <p class="mb-0">Types :
                                                                        {% for type in searchResult.types %}
                                                                                <span class="badge bg-secondary text-uppercase me-1">{{ type.type.name ?? type }}</span>
                                                                        {% endfor %}
                                                                </p>
                                                        {% endif %}
                                                        <a class="btn btn-outline-primary mt-3" href="{{ path('pokemon.show', {id: searchResult.id}) }}">Voir la fiche</a>
                                                </div>
                                        </div>
                                </div>
                        </div>
                {% endif %}

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
                        {% for pokemon in pokemonList %}
                                <div class="col">
                                        <div class="card h-100 text-center shadow-sm">
                                                <div class="card-body d-flex flex-column justify-content-between">
                                                        <div>
                                                                <img src="{{ pokemon.image }}" alt="{{ pokemon.name }}" class="img-fluid mb-3" loading="lazy">
                                                                <h3 class="h5 text-capitalize">#{{ pokemon.id }} - {{ pokemon.name }}</h3>
                                                        </div>
                                                        <a class="btn btn-sm btn-outline-primary mt-3" href="{{ path('pokemon.show', {id: pokemon.id}) }}">Détails</a>
                                                </div>
                                        </div>
                                </div>
                        {% endfor %}
                </div>
        </div>
{% endblock %}
